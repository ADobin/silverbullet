{
  "requiredPermissions": ["shell"],
  "hooks": {
    "commands": {
      "Git: Snapshot": {
        "invoke": "snapshotCommand"
      },
      "Git: Sync": {
        "invoke": "syncCommand"
      }
    },
    "crons": [
      {
        "cron": "*/15 * * * *",
        "handler": "commit"
      }
    ]
  },
  "functions": {
    "snapshotCommand": {
      "path": "./git.ts:snapshotCommand",
      "env": "client"
    },
    "syncCommand": {
      "path": "./git.ts:syncCommand",
      "env": "client"
    },
    "commit": {
      "path": "./git.ts:commit",
      "env": "server"
    },
    "sync": {
      "path": "./git.ts:sync",
      "env": "server"
    }
  }
}
