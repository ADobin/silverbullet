{
  "commands": {
    "Count Words": {
      "invoke": "word_count_command"
    },
    "Navigate To page": {
      "invoke": "link_navigate",
      "key": "Ctrl-Enter",
      "mac": "Cmd-Enter"
    },
    "Insert Current Date": {
      "invoke": "insertToday",
      "slashCommand": "/today"
    },
    "Toggle : Heading 1": {
      "invoke": "toggle_h1",
      "mac": "Cmd-1",
      "key": "Ctrl-1"
    },
    "Toggle : Heading 2": {
      "invoke": "toggle_h2",
      "mac": "Cmd-2",
      "key": "Ctrl-2"
    }
  },
  "events": {
    "page:click": ["taskToggle", "clickNavigate"]
  },
  "functions": {
    "linkNavigate": {
      "path": "./navigate.ts:linkNavigate"
    },
    "clickNavigate": {
      "path": "./navigate.ts:clickNavigate"
    },
    "taskToggle": {
      "path": "./task.ts:taskToggle"
    },
    "word_count_command": {
      "path": "./word_count_command.ts:wordCount"
    },
    "insertToday": {
      "path": "./dates.ts:insertToday"
    },
    "toggle_h1": {
      "path": "./markup.ts:toggleH1"
    },
    "toggle_h2": {
      "path": "./markup.ts:toggleH2"
    }
  }
}
